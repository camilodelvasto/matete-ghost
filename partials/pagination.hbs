<nav id="pagination" class="pagination" role="navigation">
    {{#if prev}}
        <a class="pagination--prev" href="{{page_url prev}}">Newer</a>
    {{/if}}
    <span class="pagination--pages">Page {{page}} of {{pages}}</span>
    {{#if next}}
        <a class="pagination--next" href="{{page_url next}}">Older</a>
    {{/if}}
</nav>
